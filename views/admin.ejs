    <%- include('./partials/header') %>
    
        <% if (typeof success !=='undefined' && success.length> 0) { %>
            <div
                class="fixed top-5 left-1/2 transform -translate-x-1/2 z-50 bg-green-500 text-white px-6 py-3 rounded-lg shadow-lg">
                <span class="block">
                    <%= success %>
                </span>
            </div>
            <% } %>
    
                <div class="min-h-screen bg-gray-50 flex">
                    <!-- Sidebar Navigation -->
                    <div class="w-64 bg-white shadow-lg p-6">
                        <nav class="space-y-4">
                            <a href="/shop"
                                class="block px-4 py-2 text-gray-700 hover:bg-blue-50 hover:text-blue-600 rounded-lg transition-colors">
                                All Products
                            </a>
                            <a href="/createproducts"
                                class="block px-4 py-2 text-gray-700 hover:bg-blue-50 hover:text-blue-600 rounded-lg transition-colors">
                                Create new product
                            </a>
                            <a href="/blog"
                                class="block px-4 py-2 text-gray-700 hover:bg-blue-50 hover:text-blue-600 rounded-lg transition-colors">
                                All Blogs
                            </a>
                            <a href="/createblog"
                                class="block px-4 py-2 text-gray-700 hover:bg-blue-50 hover:text-blue-600 rounded-lg transition-colors">
                                Create new blog
                            </a>
                        </nav>
                    </div>
    
                    <!-- Main Content Area -->
                    <div class="flex-1 p-8 overflow-auto">
                        <!-- Blogs Section -->
                       <section class="mb-12">
                            <h2 class="text-2xl font-bold mb-6 text-gray-800">Blogs</h2>
                            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                                <% blogs.forEach(function(blog) { %>
                                    <div class="bg-white rounded-lg shadow-md overflow-hidden">
                                        <div class="aspect-w-16 aspect-h-9">
                                            <% if (blog.image && blog.image.length> 0) { %>
                                                <img src="data:${req.file.mimetype};base64,<%= blog.image.toString('base64') %>" alt="<%= blog.title %>"
                                                    class="w-full h-48 object-cover"
                                                    onerror="this.onerror=null; this.src='/images/placeholder.jpg';" />
                                                <% } else { %>
                                                    <div class="w-full h-48 bg-gray-200 flex items-center justify-center">
                                                        <svg class="w-12 h-12 text-gray-400" fill="none"
                                                            stroke="currentColor" viewBox="0 0 24 24">
                                                            <path stroke-linecap="round" stroke-linejoin="round"
                                                                stroke-width="2"
                                                                d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                                                        </svg>
                                                    </div>
                                                    <% } %>
                                        </div>
                                        <div class="p-4">
                                            <h3 class="font-semibold text-lg mb-2">
                                                <%= blog.title %>
                                            </h3>
                                            <p class="text-gray-600 text-sm mb-2">
                                                <%= blog.email %>
                                            </p>
                                            <p class="text-gray-700 line-clamp-3">
                                                <%= blog.content %>
                                            </p>
                                        </div>
                                    </div>
                                    <% }); %>
                            </div>
                        </section>
                        
                        <!-- Products Section -->
                        <section>
                            <h2 class="text-2xl font-bold mb-6 text-gray-800">Products</h2>
                            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
                                <% products.forEach(product=> { %>
                                    <div class="bg-white rounded-lg shadow-md overflow-hidden">
                                        <div class="aspect-w-16 aspect-h-9">
                                            <% if (product.image && product.image.length> 0) { %>
                                                <img src="data:${req.file.mimetype};base64,<%= product.image.toString('base64') %>" alt="<%= product.name %>"
                                                    class="w-full h-48 object-cover"
                                                    onerror="this.onerror=null; this.src='/images/product-placeholder.jpg';" />
                                                <% } else { %>
                                                    <div class="w-full h-48 bg-gray-200 flex items-center justify-center">
                                                        <svg class="w-12 h-12 text-gray-400" fill="none"
                                                            stroke="currentColor" viewBox="0 0 24 24">
                                                            <path stroke-linecap="round" stroke-linejoin="round"
                                                                stroke-width="2"
                                                                d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
                                                        </svg>
                                                    </div>
                                                    <% } %>
                                        </div>
                                        <div class="p-4">
                                            <div class="flex justify-between items-center">
                                                <div>
                                                    <h3 class="font-semibold text-lg">
                                                        <%= product.name %>
                                                    </h3>
                                                    <p class="text-gray-600">₹ <%= product.price.toLocaleString() %>
                                                    </p>
                                                </div>
                                                <a href="/cart/add/<%= product.id %>"
                                                    class="w-10 h-10 flex items-center justify-center rounded-full bg-blue-500 hover:bg-blue-600 text-white transition-colors">
                                                    <svg class="w-6 h-6" fill="none" stroke="currentColor"
                                                        viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round"
                                                            stroke-width="2" d="M12 4v16m8-8H4" />
                                                    </svg>
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                    <% }); %>
                            </div>
                        </section>
                    </div>
                </div>
    
                <%- include('./partials/footer') %>