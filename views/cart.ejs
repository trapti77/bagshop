        <%- include('./partials/header') %>
        
            <div class="w-full min-h-screen px-20 py-10 bg-gray-100">
                <h1 class="text-3xl font-bold text-gray-800 mb-8">Your Cart</h1>
        
                <% if (user.cart.length===0) { %>
                    <p class="text-lg text-gray-600">Your cart is empty.</p>
                    <% } else { %>
                        <% user.cart.forEach(function(item) { %>
                            <div class="flex flex-col md:flex-row items-start bg-white rounded-lg shadow-md p-6 mb-6">
                                <!-- Image and Product Info -->
                                <div class="w-full md:w-1/3 flex flex-col items-center">
                                    <div
                                        class="w-full h-48 flex justify-center items-center bg-gray-200 rounded-lg overflow-hidden">
                                        <% if (item.image) { %>
                                            <img class="h-48 object-contain"
                                                src="data:image/jpeg;base64,<%= item.image.toString('base64') %>"
                                                alt="Product Image">
                                            <% } else { %>
                                                <div class="h-full w-full flex items-center justify-center bg-gray-300">
                                                    <p>No Image Available</p>
                                                </div>
                                                <% } %>
                                    </div>
                                    <h3 class="mt-4 text-2xl font-semibold text-gray-800">
                                        <%= item.name %>
                                    </h3>
                                </div>
        
                                <!-- Price Breakdown and Delete Button -->
                                <div class="w-full md:w-2/3 mt-6 md:mt-0 md:ml-6">
                                    <div class="flex justify-between items-center mb-4">
                                        <h4 class="text-xl font-semibold text-gray-700">Price Breakdown</h4>
                                        <form action="/cart/delete/<%= item.id %>" method="POST" class="inline">
                                            <button type="submit" class="text-red-500 hover:text-red-700 flex items-center">
                                                <i class="ri-delete-bin-6-line text-2xl mr-1"></i> Delete
                                            </button>
                                        </form>
                                    </div>
        
                                    <div class="mt-4 space-y-3">
                                        <div class="flex justify-between">
                                            <span>Price</span>
                                            <span>₹ <%= item.price %></span>
                                        </div>
                                        <div class="flex justify-between">
                                            <span>Discount</span>
                                            <span>- ₹ <%= item.discount %></span>
                                        </div>
                                        <div class="flex justify-between">
                                            <span>Quantity</span>
                                            <span>
                                                <%= item.quantity %>
                                            </span>
                                        </div>
                                        <div class="flex justify-between font-semibold text-lg">
                                            <span>Item Total</span>
                                            <span>₹ <%= (item.price - item.discount) * item.quantity %></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <% }) %>
        
                                <!-- Final Total Section -->
                                <div class="bg-white rounded-lg shadow-md p-6 mt-10">
                                    <div class="flex justify-between font-semibold text-2xl text-gray-800">
                                        <span>Total Amount</span>
                                        <span class="text-green-600">₹ <%= user.cart.reduce((acc, item)=> acc + (item.price -
                                                item.discount) * item.quantity, 0) %></span>
                                    </div>
                                    <button
                                        class="mt-6 w-full py-3 bg-blue-600 text-white font-bold text-lg rounded-lg hover:bg-blue-700">
                                        Proceed to Checkout
                                    </button>
                                </div>
                                <% } %>
            </div>
        
            <%- include('./partials/footer') %>