<%- include('./partials/header') %>

    <% if(success.length>0){ %>
        <div class="absolute top-5 left-1/2 -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-blue-500">
            <span class="inline-block mt-1 mb-1 text-white">
                <%= success %>
            </span>
        </div>
        <% } %>

            <div class="min-h-screen flex flex-col">
                <div class="container px-10 py-20 flex flex-grow">
                    <div class="w-[25%] flex h-screen flex-col items-start">
                        <div class="flex flex-col">
                            <a class="block w-fit mb-2" href="">All Blogs</a>
                            <a class="block w-fit mb-2" href="">Create new blog</a>
                        </div>
                    </div>
                    <main class="w-3/4 bg-white p-8 shadow ml-4">
                        <h2 class="text-xl font-bold mb-4">Create New Blog</h2>
                        <form autocomplete="off" action="/blogs/create" method="post" enctype="multipart/form-data">
                            <div class="mb-6">
                                <h3 class="text-lg font-semibold mb-2">Blogs Details</h3>
                                <div class="mb-4">
                                    <label class="block mb-2 font-medium">Blog Image</label>
                                    <input name="image" type="file" class="py-2 px-4 rounded" value="Select File">
                                </div>
                                <div class="grid grid-cols-2 gap-4">
                                    <input name="email" type="text" placeholder="Email"
                                        class="border p-2 rounded w-full">
                                    <input name="title" type="text" placeholder="Title"
                                        class="border p-2 rounded w-full">
                                    <input name="content" type="text" placeholder="Content"
                                        class="border p-2 rounded w-full">
                                </div>
                            </div>
                            <input class="px-5 py-2 rounded mt-3 bg-blue-500 text-white" type="submit"
                                value="Create New Blog">
                        </form>
                    </main>
                </div>
            </div>
            <%- include('./partials/footer') %>