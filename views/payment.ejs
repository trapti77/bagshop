<%- include('./partials/header') %>

    <div class="container mx-auto py-10">
        <h1 class="text-2xl font-bold mb-6">Payment Information</h1>

        <form action="/payments/payment" method="POST">
            <div class="mb-6">
                <h2 class="text-lg font-semibold text-gray-700">Order Total: ₹ <%= totalAmount.toFixed(2) %>
                </h2>
            </div>

            <div class="mb-6">
                <label for="cardName" class="block text-gray-700">Cardholder Name</label>
                <input type="text" name="cardName" id="cardName" required class="border border-gray-300 p-2 w-full" />
            </div>

            <div class="mb-6">
                <label for="cardNumber" class="block text-gray-700">Card Number</label>
                <input type="text" name="cardNumber" id="cardNumber" required
                    class="border border-gray-300 p-2 w-full" />
            </div>

            <div class="mb-6">
                <label for="expiryDate" class="block text-gray-700">Expiry Date (MM/YY)</label>
                <input type="text" name="expiryDate" id="expiryDate" required
                    class="border border-gray-300 p-2 w-full" />
            </div>

            <div class="mb-6">
                <label for="cvv" class="block text-gray-700">CVV</label>
                <input type="text" name="cvv" id="cvv" required class="border border-gray-300 p-2 w-full" />
            </div>

            <button type="submit" class="bg-blue-500 text-white py-2 px-4 rounded">Proceed to Payment</button>
        </form>
    </div>

    <%- include('./partials/footer') %>